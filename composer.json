        "phpunit/phpunit": "^12",
        "friendsofphp/php-cs-fixer": "3.75"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "test": ["@phpunit"]
    }
}

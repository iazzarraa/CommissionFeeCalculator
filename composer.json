    "description": "Skeleton for Ismail AZZARRAA recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "guzzlehttp/guzzle": "^7.0"
    },
